<!-- views/dashboard.ejs -->
<!DOCTYPE html>
<html lang="en" class="h-full bg-gray-900">
<head>
    <title>Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="h-full">

    <div class="flex min-h-full flex-col items-center justify-center px-4 py-12 sm:px-6 lg:px-8">
      
      <div class="text-center p-8 bg-gray-800 rounded-lg shadow-xl">
        
        <h2 class="text-3xl font-bold text-white mb-4">
          Welcome to the Dashboard, <span class="text-indigo-400"><%= user.username %></span>!
        </h2>
        
        <p class="text-lg text-gray-300 mb-8">
          You are successfully logged in.
        </p>

        <a href="/logout" class="px-6 py-2 bg-indigo-600 text-white font-semibold rounded-md shadow-md hover:bg-indigo-700 transition duration-150 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-900">
            Logout
        </a>
      </div>
    </div>

</body>
</html>
